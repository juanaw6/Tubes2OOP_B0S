        <Button text="Start" fx:id="startButton" onAction="#handleStartGame" styleClass="custom-button"/>
        <Button text="Exit" fx:id="exitButton" onAction="#handleExit" styleClass="custom-button"/>
    </VBox>
</StackPane>
