    <VBox alignment="CENTER" spacing="20.0">
        <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10px;">
            <Text text="10023640" fill="#FFF6E9" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Text text="13522047" fill="#FFF6E9" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Text text="13522063" fill="#FFF6E9" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Text text="13522073" fill="#FFF6E9" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Text text="13522077" fill="#FFF6E9" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Text text="13522081" fill="#FFF6E9" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
        <Text text="Farm Card Game" style="-fx-font-size: 64px; -fx-font-weight: bold;" fill="#FFF6E9"/>
