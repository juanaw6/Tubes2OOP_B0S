        <ImageView fitWidth="800.0" preserveRatio="true">
            <image>
                <Image url="@../public/farm.png" />
            </image>
        </ImageView>
        <ImageView fitWidth="800.0" preserveRatio="true">
            <image>
                <Image url="@../public/farm_1.png"/>
            </image>
        </ImageView>
