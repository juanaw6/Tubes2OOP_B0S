<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141" fx:controller="app.ShufflePopupController" alignment="CENTER" spacing="10.0" stylesheets="@shuffle.css" style="-fx-background-color: #1B425B; -fx-border-color: #FFF6E9; -fx-border-width: 5px;">
    <GridPane fx:id="cardGrid" alignment="CENTER" hgap="10.0" vgap="10.0">
        <!-- The cards will be dynamically added here -->
    </GridPane>
    <HBox spacing="10.0" alignment="CENTER">
        <Button fx:id="reshuffleButton" text="Reshuffle" onAction="#handleReshuffle" styleClass="custom-button"/>
        <Button fx:id="acceptButton" text="Accept" onAction="#handleAccept" styleClass="custom-button"/>
    </HBox>
</VBox>
