<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141" fx:controller="app.InvalidMovePopupController" alignment="CENTER" spacing="10.0" style="-fx-background-color: #F8F8F8; -fx-padding: 20; -fx-background-radius: 0; -fx-border-radius: 1;">
    <HBox alignment="CENTER" spacing="10.0">
        <ImageView fx:id="warningIcon" fitWidth="40.0" fitHeight="40.0">
            <image>
                <Image url="@../public/Warning.png"/>
            </image>
        </ImageView>
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Text text="Warning!" style="-fx-fill: #C72229;">
                <font>
                    <Font name="Arial Bold" size="20.0"/>
                </font>
            </Text>
            <Text text="Player is not allowed to do this action." style="-fx-fill: #C72229;">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Text>
        </VBox>
        <Button fx:id="backButton" text="X" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #C72229; -fx-font-size: 16px; -fx-padding: 5px;"/>
    </HBox>
</VBox>
